<div class="container">

<h1>Here are the current users for Inflow Kudos</h1>

  <div class="table-responsive" id="user-table">
    <table class="table-striped" id="user-index">
      <thead>
        <tr>
          <th>User</th>
          <th>Given Kudos</th>
          <th>Received Kudos</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @user.each do |user| %>
          <tr>
            <td><%= link_to "#{user.name.titlecase}", user_path(user.id) %></td>
            <td><%= user.given_kudos.count %></td>
            <td><%= user.received_kudos.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
